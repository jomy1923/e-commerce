<section class=" p-5">
<!--Table-->
<table>

  <!--Table head-->
  <thead>
    <tr class="table-warning">
      <th>Date</th>
      <th>Pincode</th>
      <th>Mobile</th>
      <th>Address</th>
      <th scope="col">Amount</th>
      <th scope="col">Payment</th>
      <th>status</th>
      <th>View</th>

    </tr>
  </thead>
  <!--Table head-->

  <!--Table body-->
  <tbody>

  {{#each orders}}
    <tr class="table">

      <td>{{this.date}}</td>
       <td>{{this.deliveryDetails.pincode}}</td>
      <td>{{this.deliveryDetails.mobile}}</td>
      <td>{{this.deliveryDetails.address}}</td>
      <td>{{this.getTotalAmount}}</td>
      <td>{{this.paymentMethod}}</td>
     
      {{!-- {{#if this.ship}}
      <td>{{this.ship}}</td>
      {{else}}
       <td>{{this.status}}</td>
       {{/if}} --}}
 {{#if (eqw this.ship 'Not Dispatched')}}
      <td class="pt-5" style="color: rgb(235, 21, 14);">{{this.ship}}</td>
      {{else}}
      {{#if (eqw this.ship 'Order Cancelled')}}
       <td class="pt-5" style="color: rgb(235, 21, 14);">{{this.ship}}</td>
    {{else}}
       <td  class="pt-5" style="color: rgb(14, 235, 62);">{{this.ship}}</td>
      {{/if}}
      {{/if}}
     
      <td>
        <a href="/view-order-products/{{this._id}}" class="btn btn-primary ">view products</a>
        <a href="/view-order-products/{{this._id}}" class="btn btn-danger" >cancel the order</a>
      </td>
    </tr>
    {{/each}}

   

  </tbody>
  <!--Table body-->


</table>
<!--Table-->
</section>
