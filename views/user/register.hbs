<script>
    $('#btn').click((event)=>{
        event.preventDefault()
        
        let uname=$('#form-username').val()
        let email=$('#email').val()
        let password=$('#form-username-password').val()
        $.ajax({
            url:'/register',
            method:'POST',
            data:{uname,email,password},
            success:(response)=>{
                if(response.user==false){
                    $('#error').show()
                }else{
                    $('#error').hide()
                    alert('you are register sucessfully')
                    window.location.href='/login'
                }
                
            }
        })

    })
</script>

